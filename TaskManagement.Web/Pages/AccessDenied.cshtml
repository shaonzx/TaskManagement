@page
@model TaskManagement.Web.Pages.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container text-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-danger"><i class="fas fa-ban"></i> Access Denied</h1>
                    <p class="lead">You don't have permission to access this resource.</p>
                    <p>If you believe this is an error, please contact your administrator.</p>
                    <a asp-page="/Index" class="btn btn-primary">Return to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
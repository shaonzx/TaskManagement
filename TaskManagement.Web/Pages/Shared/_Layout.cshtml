<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskManagement</title>

    <!-- Bootswatch Lumen Theme -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5/dist/lumen/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/bootswatch_lumen.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@600&display=swap" rel="stylesheet">
    <style>
        :root {
            --lumen-primary: #4582EC;
            --lumen-secondary: #adb5bd;
            --lumen-success: #02B875;
            --lumen-light: #F8F9FA;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #f5f7f9;
        }

        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
            padding: 0.5rem 0;
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--lumen-primary) !important;
            display: flex;
            align-items: center;
        }

        .nav-link {
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            margin: 0 0.2rem;
            border-radius: 0.375rem;
            transition: all 0.3s ease;
            color: #333 !important;
        }

            .nav-link:hover, .nav-link.active {
                background-color: rgba(69, 130, 236, 0.1);
                color: var(--lumen-primary) !important;
            }

        .navbar-nav .nav-item {
            display: flex;
            align-items: center;
        }

        .online-users {
            background-color: rgba(2, 184, 117, 0.1);
            color: var(--lumen-success) !important;
            border-radius: 20px;
            padding: 0.35rem 1rem !important;
            font-weight: 500;
            margin-right: 1rem;
        }

        .container-main {
            flex: 1;
        }

        footer {
            background: linear-gradient(to right, #f8f9fa, #e9ecef, #f8f9fa);
            box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.05);
            padding: 1.5rem 0;
            margin-top: auto;
        }

        .footer-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .footer-links {
            display: flex;
            gap: 1.5rem;
        }

            .footer-links a {
                color: #6c757d;
                text-decoration: none;
                transition: color 0.3s;
            }

                .footer-links a:hover {
                    color: var(--lumen-primary);
                }

        .dropdown-menu {
            border: 1px solid rgba(0,0,0,.1);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

        .dropdown-item:hover {
            background-color: rgba(69, 130, 236, 0.1);
            color: var(--lumen-primary);
        }

        .navbar-toggler {
            border: none;
            padding: 0.25rem 0.5rem;
        }

            .navbar-toggler:focus {
                box-shadow: 0 0 0 2px rgba(69, 130, 236, 0.25);
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="bi bi-check2-square me-2"></i>TaskManagement
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Manager")))
                        {
                            <li class="nav-item" data-required-roles="Admin,Manager">
                                <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Projects") ? "active" : "")"
                                   asp-area="" asp-page="/Projects/Index">
                                    <i class="bi bi-folder me-1"></i>Projects
                                </a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Member")))
                        {
                            <li class="nav-item" data-required-roles="Admin,Manager,Member">
                                <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Tasks") ? "active" : "")"
                                   asp-area="" asp-page="/Tasks/Index">
                                    <i class="bi bi-list-task me-1"></i>Tasks
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item" data-required-roles="Admin">
                                <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Users") ? "active" : "")"
                                   asp-area="" asp-page="/Admin/Users/Index">
                                    <i class="bi bi-people me-1"></i>User Management
                                </a>
                            </li>
                            <li class="nav-item" data-required-roles="Admin">
                                <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/AuditLogs") ? "active" : "")"
                                   asp-area="" asp-page="/Admin/AuditLogs/Index">
                                    <i class="bi bi-clipboard-data me-1"></i>Audit Logs
                                </a>
                            </li>
                        }
                    </ul>


                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <span class="nav-link online-users-display">
                                <i class="bi bi-circle-fill text-success me-1"></i>
                                <span id="online-users-count">0 users online</span>
                            </span>
                        </li>
                        <partial name="_LoginPartial"/>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container container-main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div>
                    &copy; 2024 - TaskManagement
                </div>
                <div class="footer-links">
                    <a asp-area="" asp-page="/Privacy">Privacy</a>
                    <a asp-area="" asp-page="/Terms">Terms</a>
                    <a href="#">Support</a>
                    <a href="#">Contact</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Add SignalR client library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script src="~/js/signalir.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
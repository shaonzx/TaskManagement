@page
@model TaskManagement.Web.Pages.Projects.IndexModel
@{
    ViewData["Title"] = "Projects";
}

<div class="container">
    <h2>Projects</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (Model.IsAdmin)
    {
        <a asp-page="Create" class="btn btn-primary mb-3">Create New Project</a>
    }

    <div class="row">
        @foreach (var project in Model.Projects)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@project.Name</h5>
                        <p class="card-text">@project.Description</p>
                        <p class="card-text">
                            <small class="text-muted">
                                Created by: @project.CreatedBy?.FirstName @project.CreatedBy?.LastName<br>
                                Tasks: @project.Tasks?.Count(t => t.IsActive)<br>
                                Team Members: @project.ProjectAssignments?.Count(pa => pa.IsActive)<br>
                                Assigned To: @project.AssignedTo?.FirstName
                            </small>
                        </p>
                        <div class="d-flex gap-2">
                            <a asp-page="Details" asp-route-id="@project.Id" class="btn btn-secondary btn-sm">View Details</a>
                            @if (Model.IsAdmin)
                            {
                                <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this project?');">
                                    <input type="hidden" name="id" value="@project.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
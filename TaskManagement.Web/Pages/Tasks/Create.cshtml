@page
@model TaskManagement.Web.Pages.Tasks.CreateModel
@{
    ViewData["Title"] = "Create Task";
}

<div class="container">
    <h2>Create Task</h2>

    <form method="post">
        <div class="form-group mb-3">
            <label asp-for="TaskItem.Title" class="form-label"></label>
            <input asp-for="TaskItem.Title" class="form-control" />
            <span asp-validation-for="TaskItem.Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TaskItem.Description" class="form-label"></label>
            <textarea asp-for="TaskItem.Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="TaskItem.Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TaskItem.ProjectId" class="form-label"></label>
            <select asp-for="TaskItem.ProjectId" asp-items="Model.Projects" class="form-select">
                <option value="">-- Select Project --</option>
            </select>
            <span asp-validation-for="TaskItem.ProjectId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TaskItem.AssignedToId" class="form-label"></label>
            <select asp-for="TaskItem.AssignedToId" asp-items="Model.Users" class="form-select">
                <option value="">-- Assign To --</option>
            </select>
            <span asp-validation-for="TaskItem.AssignedToId" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TaskItem.Priority" class="form-label"></label>
                    <select asp-for="TaskItem.Priority" asp-items="Html.GetEnumSelectList<TaskManagement.Core.Enums.TaskPriority>()" class="form-select"></select>
                    <span asp-validation-for="TaskItem.Priority" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TaskItem.DueDate" class="form-label"></label>
                    <input asp-for="TaskItem.DueDate" type="date" class="form-control" />
                    <span asp-validation-for="TaskItem.DueDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create Task</button>
            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
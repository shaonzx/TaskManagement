@page "{id:int}"
@model TaskManagement.Web.Pages.Tasks.EditModel
@{
    ViewData["Title"] = "Edit Task";
}

<div class="container">
    <h2>Edit Task</h2>

    <form method="post">
        <input type="hidden" asp-for="TaskItem.Id" />
        <input type="hidden" asp-for="TaskItem.ProjectId" />
        <input type="hidden" asp-for="TaskItem.CreatedById" />
        <input type="hidden" asp-for="TaskItem.CreatedDate" />

        <div class="form-group">
            <label asp-for="TaskItem.Title" class="control-label"></label>
            <input asp-for="TaskItem.Title" class="form-control" />
            <span asp-validation-for="TaskItem.Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TaskItem.Description" class="control-label"></label>
            <textarea asp-for="TaskItem.Description" class="form-control"></textarea>
            <span asp-validation-for="TaskItem.Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TaskItem.Status" class="control-label"></label>
            <select asp-for="TaskItem.Status" asp-items="Model.StatusList" class="form-control"></select>
            <span asp-validation-for="TaskItem.Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TaskItem.Priority" class="control-label"></label>
            <select asp-for="TaskItem.Priority" asp-items="Model.PriorityList" class="form-control"></select>
            <span asp-validation-for="TaskItem.Priority" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TaskItem.AssignedToId" class="control-label"></label>
            <select asp-for="TaskItem.AssignedToId" asp-items="Model.Users" class="form-control">
                <option value="">-- Assign To --</option>
            </select>
            <span asp-validation-for="TaskItem.AssignedToId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TaskItem.DueDate" class="control-label"></label>
            <input asp-for="TaskItem.DueDate" type="date" class="form-control" />
            <span asp-validation-for="TaskItem.DueDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>